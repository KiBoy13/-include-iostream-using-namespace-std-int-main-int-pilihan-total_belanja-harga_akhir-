#include <iostream>

using namespace std;

int main()
{
  int pilihan,total_belanja, harga_akhir;
  {
    cout << "##  Daftar Menu Kopi Ilkom  ##" << endl;
    cout << "==============================" << endl;
    cout << "1. BLACK COFFE" << endl;
    cout << "2. CAPPUCCINO" << endl;
    cout << "3. MOCACINO " << endl;
    cout << "4. AMERICANO" << endl;
    cout << "5. ESPRESSO" << endl;
    cout << endl;
    cout << "Pilihan anda: ";
    cin >> pilihan;
    cout << "UANG BAYAR: Rp.";
      cin >> total_belanja;
      cout << endl;

    switch(pilihan){
    case 1:
        cout << "Anda memilih BLACK COFFE" << endl;
        cout << "Dengan Harga 19.000" << endl;
        break;
    case 2:
        cout << "Anda memilih CAPPUCCINO" << endl;
        cout << "Dengan harga 15.000" << endl;
        break;
    case 3:
        cout << "Anda memilih MOCACCINO" << endl;
        cout << "Dengan Harga 10.000" << endl;
        break;
    case 4:
        cout << "Anda memilih AMERICANO" << endl;
        cout << "Dengan Harga 20.000" << endl;
        break;
    case 5:
        cout << "Anda memilih ESPRESSO" << endl;
        cout << "Dengan harga 5.000" << endl;
        break;
    case 6:
        cout << "SELESAI" << endl;
        break;
    default:
        cout << "Menu tidak tersedia" << endl;
    }

      if ((total_belanja >= 19000) && (total_belanja < 19000)) {
        harga_akhir = total_belanja - (0.1*total_belanja);
        cout << "Selamat Anda Berhasil Membayar" << endl;
      }
      else if ((total_belanja >= 15000) && (total_belanja < 15000)) {
        harga_akhir = total_belanja - (0.1*total_belanja);
        cout << "Selamat Anda Berhasil Membayar" << endl;
      }
      else if ((total_belanja >= 10000) && (total_belanja < 10000)) {
        harga_akhir = total_belanja - (0.3*total_belanja);
        cout << "Selamat Anda Berhasil Membayar" << endl;
      }
      else if ((total_belanja >= 20000) && (total_belanja < 20000)) {
        harga_akhir = total_belanja - (0.1*total_belanja);
        cout << "Selamat Anda Berhasil Membayar" << endl;
      }
      else if ((total_belanja >= 5000) && (total_belanja < 5000)) {
        harga_akhir = total_belanja - (0.2*total_belanja);
        cout << "Selamat Anda Berhasil Membayar" << endl;
      }
      else if (total_belanja >= harga_akhir) {
        harga_akhir = total_belanja - (1*total_belanja);
        cout << "Selamat Anda Berhasil Membayar" << endl;
      }
      else {
        harga_akhir = total_belanja;
      }

      cout << "Uang Bayar." << total_belanja << endl;

      return 0;
    }


}
